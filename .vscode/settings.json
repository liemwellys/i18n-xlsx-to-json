{
    "editor.formatOnSave": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
        }
    },
    "autopep8.args": [
        "--max-line-length=120",
    ],
    "isort.check": true,
    "isort.args": ["--profile", "django"],
}
